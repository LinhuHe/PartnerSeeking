page{background-color:#F5F5DC;}
/* list.wxss */
.cv{
  display:flex;
  height:100px;
  border-bottom: 5px solid whitesmoke;
}
.cv .tp{
  height:80px;
  width:140px;
  margin:10px;
  margin-right: 0;
}
.cv .tp image{
  width:100%;
  height:100%;
}
.cv .js{
  flex:1;
  padding:10px;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
}
.cv .js text{
  font-size: 13px;
}
.cv .js .t1{
  font-size: 14px;
  font-weight: bold;
}
.cv .js .t2{
  font-size: 12px;
  color: gray;
}
.cv .js .t3{
  color:green;
}